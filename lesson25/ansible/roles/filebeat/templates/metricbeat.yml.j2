metricbeat.config.modules:
  enabled: true
  reload.enabled: false
  path: /modules.d/*.yml

setup.template.settings:
  index.numbers_of_shards: 1
  index.codec: 1

output.logstash:
  hosts: ["localhost:{{beats_port}}"]

setup.ilm.overwrite: true

processors:
  - add_host_metadata: ~
  - add_cloud_metadata: ~
  - add_docker_metadata: ~
  - add_kubernetes_metadata: ~
